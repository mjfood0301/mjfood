<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.join.JoinAllergyActivity">

    <ImageView
        android:id="@+id/join_allergy_iv"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/join_allergy_explain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/join_allergy_gl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_allergy_iv">

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_shellfish_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/allergy_shellfist_no_select" />

            <ImageView
                android:id="@+id/join_allergy_shellfish_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/allergy_shellfist_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_peanut_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/allergy_peanut_no_select" />

            <ImageView
                android:id="@+id/join_allergy_peanut_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/allergy_peanut_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_egg_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/allergy_egg_no_select" />

            <ImageView
                android:id="@+id/join_allergy_egg_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/allergy_egg_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_nut_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_nut_no_select" />

            <ImageView
                android:id="@+id/join_allergy_nut_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_nut_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_wheat_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_wheat_no_select" />

            <ImageView
                android:id="@+id/join_allergy_wheat_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_wheat_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_fist_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_fish_no_select" />

            <ImageView
                android:id="@+id/join_allergy_fist_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_fish_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_milk_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_milk_no_select" />

            <ImageView
                android:id="@+id/join_allergy_milk_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_milk_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_clam_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_clam_no_select" />

            <ImageView
                android:id="@+id/join_allergy_clam_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_clam_select"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_allergy_bean_no_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_bean_no_select" />

            <ImageView
                android:id="@+id/join_allergy_bean_select"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/allergy_bean_select"
                android:visibility="gone" />

        </LinearLayout>


    </GridLayout>

    <ImageView
        android:id="@+id/join_allergy_material_explain_iv"
        android:src="@drawable/dislike_material_explain"
        android:layout_width="230dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/join_allergy_gl"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/join_allergy_finish_no_color_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/join_nickname_no_color_finish"
        android:layout_width="60dp"
        android:layout_marginBottom="20dp"
        android:layout_height="60dp"/>

    <ImageView
        android:id="@+id/join_allergy_finish_color_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/join_nickname_color_finish"
        android:layout_width="60dp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_height="60dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>