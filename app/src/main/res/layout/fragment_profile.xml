<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.profile.ProfileFragment">

    <FrameLayout
        android:id="@+id/profile_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="65dp">

                <ImageView
                    android:id="@+id/profile_allergy_iv"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile_allergy_explain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/profile_allergy_shellfish"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="갑각류"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_iv" />

                <CheckBox
                    android:id="@+id/join_profile_egg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="달걀"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_shellfish" />

                <CheckBox
                    android:id="@+id/profile_allergy_wheat"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="밀"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/join_profile_egg" />

                <CheckBox
                    android:id="@+id/profile_allergy_milk"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="우유"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_wheat" />

                <CheckBox
                    android:id="@+id/profile_allergy_bean"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="밀"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_milk" />

                <ImageView
                    android:id="@+id/profile_allergy_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/join_allergy_line"
                    app:layout_constraintBottom_toBottomOf="@id/profile_allergy_bean"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profile_allergy_shellfish" />

                <CheckBox
                    android:id="@+id/profile_allergy_nut"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="견과"
                    app:layout_constraintStart_toEndOf="@id/profile_allergy_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_iv" />

                <CheckBox
                    android:id="@+id/profile_allergy_peanut"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="땅콩"
                    app:layout_constraintStart_toEndOf="@id/profile_allergy_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_nut" />

                <CheckBox
                    android:id="@+id/profile_allergy_fish"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="생선"
                    app:layout_constraintStart_toEndOf="@id/profile_allergy_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_peanut" />

                <CheckBox
                    android:id="@+id/profile_allergy_clam"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="조개"
                    app:layout_constraintStart_toEndOf="@id/profile_allergy_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_fish" />


                <ImageView
                    android:id="@+id/profile_dislike_iv"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile_dislike_food_explain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_allergy_bean" />

                <CheckBox
                    android:id="@+id/profile_dislike_cucumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="오이"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_iv" />

                <CheckBox
                    android:id="@+id/profile_dislike_kimchi"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="김치"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_cucumber" />

                <CheckBox
                    android:id="@+id/profile_dislike_carrot"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="당근"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_kimchi" />

                <CheckBox
                    android:id="@+id/profile_dislike_bean"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="콩"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_carrot" />

                <CheckBox
                    android:id="@+id/profile_dislike_pimento"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="피망"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_bean" />

                <ImageView
                    android:id="@+id/profile_dislike_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/join_allergy_line"
                    app:layout_constraintBottom_toBottomOf="@id/profile_dislike_pimento"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profile_dislike_cucumber" />

                <CheckBox
                    android:id="@+id/profile_dislike_eggplant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="가지"
                    app:layout_constraintStart_toEndOf="@id/profile_dislike_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_iv" />

                <CheckBox
                    android:id="@+id/profile_dislike_spinach"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="시금치"
                    app:layout_constraintStart_toEndOf="@id/profile_dislike_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_eggplant" />

                <CheckBox
                    android:id="@+id/profile_dislike_paprika"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="파프리카"
                    app:layout_constraintStart_toEndOf="@id/profile_dislike_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_spinach" />

                <CheckBox
                    android:id="@+id/profile_dislike_broccoli"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="브로콜리"
                    app:layout_constraintStart_toEndOf="@id/profile_dislike_line"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_paprika" />

                <ImageView
                    android:id="@+id/profile_modify_iv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_modify_btn"
                    app:layout_constraintTop_toBottomOf="@id/profile_dislike_pimento" />

                <ImageView
                    android:id="@+id/profile_delete_iv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_delete_btn"
                    app:layout_constraintTop_toBottomOf="@id/profile_modify_iv" />

                <LinearLayout
                    android:id="@+id/bottom_ll"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_delete_iv">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/main_color" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:weightSum="4"
                    app:layout_constraintTop_toBottomOf="@id/bottom_ll">

                    <ImageView
                        android:id="@+id/home_tap"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/fragment_home" />

                    <ImageView
                        android:id="@+id/recommend_tap"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/fragment_recommend" />

                    <ImageView
                        android:id="@+id/like_tap"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/fragment_like" />

                    <ImageView
                        android:id="@+id/profile_tap"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/fragment_profile" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


</ScrollView>

