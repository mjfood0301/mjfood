<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.recommend.RecommendFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/main_color2"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp">

            <ImageView
                android:id="@+id/recommend_explain_iv"
                android:src="@drawable/recommend_explain"
                android:layout_width="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="150dp"
                android:layout_height="200dp"/>

            <ImageView
                android:id="@+id/recommend_start_iv"
                android:src="@drawable/recommend_start"
                android:layout_width="180dp"
                app:layout_constraintTop_toBottomOf="@id/recommend_explain_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="100dp"
                android:layout_height="60dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/home_tap"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/fragment_home" />

            <ImageView
                android:id="@+id/recommend_tap"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:src="@drawable/fragment_recommend" />

            <ImageView
                android:id="@+id/like_tap"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/fragment_like" />

            <ImageView
                android:id="@+id/profile_tap"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/fragment_profile" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>