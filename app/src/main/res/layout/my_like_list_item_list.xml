<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/my_like_item_iv"
            android:src="@drawable/food_sample_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>



            <TextView
                android:id="@+id/my_like_item_tv"
                android:text="피자파스타"
                app:layout_constraintTop_toBottomOf="@id/my_like_item_iv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/my_like_heart_on_iv"
                android:layout_width="20dp"
                app:layout_constraintTop_toTopOf="@id/my_like_item_tv"
                app:layout_constraintBottom_toBottomOf="@id/my_like_item_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                android:src="@drawable/user_heart_on_image"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/my_like_heart_off_iv"
                android:layout_width="20dp"
                app:layout_constraintTop_toTopOf="@id/my_like_item_tv"
                app:layout_constraintBottom_toBottomOf="@id/my_like_item_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:src="@drawable/user_heart_on_image"
                android:layout_height="20dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>